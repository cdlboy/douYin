<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="0dp" 
    android:paddingRight="0dp" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        layout="@layout/title_tanchaung" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y67"
            android:background="#ffffffff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="正在打氧"
                android:textColor="#FF121212"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y44"
            android:background="#ffffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:textColor="#FF121212" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余打氧时长："
                android:textColor="#FF999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dayan_chengyu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF999999"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/y31"
            android:layout_marginTop="@dimen/y76"
            android:background="#ffffffff"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_yanqi_zhongzhi"
                android:layout_width="@dimen/x183"
                android:layout_height="@dimen/y64"
                android:background="@drawable/button_zhongzhi_style"
                android:text="中止"
                android:textColor="#FF1B88EE"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button_yanqi_queding"
                android:layout_width="@dimen/x183"
                android:layout_height="@dimen/y64"
                android:layout_marginLeft="@dimen/x77"
                android:background="@drawable/button_queding_style"
                android:text="确定"
                android:textColor="#FFFFFEFE"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>